{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2021", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "pretty": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "noImplicitThis": false,
    "baseUrl": "./",
    "outDir": "lib",
    "paths": {
      "engine/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "lib"]
}
