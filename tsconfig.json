{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "pretty": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "noImplicitThis": false,
    "baseUrl": "./",
    "outDir": "dist",
    "paths": {
      "engine/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
